  <system.serviceModel>
    <serviceHostingEnvironment multipleSiteBindingsEnabled="true" aspNetCompatibilityEnabled="true" />
    <services>
      <service behaviorConfiguration="BDSService.BDSServiceBehavior" name="BDSService.BDSService">
        <endpoint address="" binding="basicHttpBinding" bindingConfiguration="BasicHttpBinding_IBDSService" contract="BDSService.IBDSService">
          <identity>
