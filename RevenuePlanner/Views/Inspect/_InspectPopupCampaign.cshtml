                  // SetupCampaignSave();
              }
              url = '@Url.Content("~/Inspect/LoadCampaignBudgetAllocation/")';
          }

          RemoveTabClass();
          $("#li" + tabValue).removeClass("pull-left");
          $("#li" + tabValue).addClass("active pull-left");
          $('#div' + tabValue).css({ display: "block" });

