        var $baselineTable = $('#table_baseline > tbody');
        var $html = "";
        var status = "Draft";
        if (_status.toLowerCase() == 'draft') {
            $html += '<tr class="draf" id="' + _id + '" index="' + _index + '"><td>';
        } else {
            var status = "Published";
            $html += '<tr id="' + _id + '" index="' + _index + '"><td>';
        }
     @* added by Nirav Shah  on 14 feb 2014  for 256:Model list - add delete option for model *@
        if (_isOwner == 0 || _isViewOnly != true) { // Modified by Sohel Pathan on 01/07/2014 for PL ticket #563 to apply custom restriction logic on Business Units
        $html += '<span class="delete-temp-program width5 float-left-margin-top4-margin-right10"></span>';
        }
        else {
            $html += '<span class="width3 float-left-margin-top4-margin-right10"></span>';
    }

    $html += '<span class="title-baseline-model">' + _title + '</span><span class="search-icon"></span></td>' +
        '<td>' + _businessUnit + '</td>' +
        '<td>' + _version + '</td>' +
        '<td>' + _status + '</td>' +
        '<td>' + _effectiveDate + '</td>' +     @* Added By :- Sohel on 08/04/2014 for PL ticket #424 to Show effective date column next to status column. *@
        '</tr>';
    $baselineTable.append($html);
}

