<div class="modal fade <%= o.css.editor %>">
    <div class="modal-dialog">
        <div class="modal-content header-content-footer-layout">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">Ã—</button>
                <h4 class="modal-title">Link to Plan</h4>
            </div>
            <div class="modal-body">
                <div class="<%= o.css.existingLinks %>">
                    <h4>
                        <span class="<%= o.css.availableFunds %>">$$$</span>
                        <span class="<%= o.css.availableFundsLabel %>">Available Funds</span>
                        <span class="<%= o.css.transactionName %>"><%- o.transaction.ClientTransactionId %></span>
                        <span class="<%= o.css.totalLabel %>">Total Transaction</span>
                        <span class="<%= o.css.totalTransaction %>"><%- o.currency(o.transaction.Amount) %></span>
                    </h4>
                </div>
                <div class="<%= o.css.addNewLink %>"></div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-primary">Save</button>
            </div>
        </div>
    </div>
</div>
